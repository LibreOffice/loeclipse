<project name="org.openoffice.ide.eclipse.core" default="site">
	<description>
            This project provides a new plugin for Eclipse to help 
			OpenOffice.org development
    </description>

	<loadproperties srcfile="build.properties" />
	
	<property name="prj.path" value=".." />
	<property name="out.path" value="${prj.path}/bin/ant" />
	
	<path id="dependencies.path">
		<pathelement location="${openoffice.home}/program/classes/juh.jar" />
		<pathelement location="${openoffice.home}/program/classes/jurt.jar" />
		<pathelement location="${openoffice.home}/program/classes/ridl.jar" />

		<fileset dir="${eclipse.home}/plugins/">
			<include name="org.eclipse*.jar"/>
		</fileset>
	</path>
	
	<target name="clean"
			description="Cleans all the temporary files">
		
		<delete dir="${out.path}/plugin" />
		<delete dir="${out.path}/feature" />
	</target>
	
	<target name="purge"
			description="Removes all the generated files">
		<delete dir="${out.path}" />
		<antcall target="internals clean" />
	</target>

	<!-- ================================= 
          target: site              
         ================================= -->
	<target name="site"
    	        depends="plugin, feature" 
    	        description="builds and delivers the plugin">

		<copy file="${prj.path}/build/site_fragment.xml.in" 
			tofile="${out.path}/site_fragment.xml" />
				
		<replace file="${out.path}/site_fragment.xml"
			token="@VERSION@" value="${version}" />
		
        <echo>
           =================================================
           
           The core plugin and feature are created. Please
           run the build.xml file in the build project in
           order to generate the whole ooeclipseintegration
           update site.
           
           =================================================
        </echo>

	</target>

	<!-- - - - - - - - -   target: feature  - - - - - - - - - - - - -->
	<target name="feature" depends="plugin">
		
		<mkdir dir="${out.path}/features" />
		
		<!-- Replace the @VERSION@ tokens to create the feature.xml file  -->
		<mkdir dir="${out.path}/feature" />
		<copy file="${prj.path}/build/feature.xml.in"
			tofile="${out.path}/feature/feature.xml" />
		<replace file="${out.path}/feature/feature.xml" 
			token="@VERSION@" value="${version}" />
		
		<jar destfile="${out.path}/features/org.openoffice.ide.eclipse.core_${version}.jar"
			basedir="${out.path}/feature"
			includes="feature.xml" />
		
	</target>

	<!-- - - - - - - - -   target: plugin  - - - - - - - - - - - - -->
	<target name="plugin" depends="internals">
		
		<mkdir dir="${out.path}/plugins" />
		<mkdir dir="${out.path}/plugin" />
		<javac srcdir="${prj.path}/source" destdir="${out.path}/plugin"
			target="1.3" source="1.3"
			classpathref="dependencies.path" 
			excludes="**/unittests/**,**/UnoTypesGetter*"/>
		
		<copy todir="${out.path}/plugin">
			<fileset dir="${prj.path}/source">
				<include name="**/*.properties"/>
			</fileset>
		</copy>

		<!-- Copy the important files in the directory -->
		<copy todir="${out.path}/plugin/doc">
			<fileset dir="${prj.path}/doc">
				<include name="**/*"/>
			</fileset>
		</copy>
		
		<copy todir="${out.path}/plugin/icons">
	    	<fileset dir="${prj.path}/icons">
	    		<include name="**/*"/>
	    	</fileset>
		</copy>
		
		<copy todir="${out.path}/plugin/" 
			file="${prj.path}/UnoTypesGetter.jar" />
		
		<copy file="${prj.path}/META-INF/MANIFEST.MF.in"
			tofile="${out.path}/plugin/META-INF/MANIFEST.MF" />
		<replace file="${out.path}/plugin/META-INF/MANIFEST.MF"
			token="@VERSION@" value="${version}" />
		
		<copy file="${prj.path}/plugin.properties" 
			  tofile="${out.path}/plugin/plugin.properties" />
		<copy file="${prj.path}/plugin.xml" 
			  tofile="${out.path}/plugin/plugin.xml" />
		
		<!-- Creating the plugin jar file -->
		<jar destfile="${out.path}/plugins/org.openoffice.ide.eclipse.core_${version}.jar"
			basedir="${out.path}/plugin"
			manifest="${out.path}/plugin/META-INF/MANIFEST.MF"
			includes="**/*" />
		
	</target>

	<target name="internals">
		
		<mkdir dir="${prj.path}/bin"/>
		
		<!-- Generate the javadoc API in the doc/html/api folder -->				
		<javadoc 
			packagenames="org.openoffice.ide.eclipse.core.*"
			classpathref="dependencies.path"
			destdir="${prj.path}/doc/help/html/api">
				
			<packageset dir="${prj.path}/source">
				<include name="org/openoffice/ide/eclipse/core/**"/>
				<exclude name="**/internal/**"/>
				<exclude name="**/unittests/**"/>
			</packageset>
		</javadoc>
		
		<!-- Creating the UnoTypesGetter.jar file -->
		<jar destfile="${prj.path}/UnoTypesGetter.jar"
			basedir="${prj.path}/bin">
			
			<fileset dir="${prj.path}/source">
				<filename name="**/InternalUnoType*"/>
				<filename name="**/UnoTypesGetter*"/>
				<filename name="**/UnoTypeProvider*"/>
			</fileset>
			
			<manifest>
				<attribute name="Main-Class" 
					value="org.openoffice.ide.eclipse.core.unotypebrowser.UnoTypesGetter" />
				<attribute name="RegistrationClassName"
					value="org.openoffice.ide.eclipse.core.unotypebrowser.UnoTypesGetter"/>
			</manifest>
		</jar>
		
	</target>
	
	
	<target name="internals clean">
		
		<delete dir="${prj.path}/doc/help/html/api" />
		<delete file="${prj.path}/UnoTypesGetter.jar" />
		
	</target>
	
</project>

